<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/kindaBlack"
    tools:context=".SignInFragment"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/firebase_sunset"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="emailAddress"
        android:hint="Email"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/et_round"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_marginTop="5dp"
        android:background="@drawable/et_round"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="password"
        android:hint="Password"
        android:inputType="numberPassword" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:backgroundTint="#F4F3F3"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/white"
        app:cornerRadius="25dp"
        android:text="Login"
        android:textColor="#090808"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/go_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to Signup"
        android:gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/red"
        android:visibility="gone"
        android:padding="30dp"
        android:text="fadsfaf"

        />

</LinearLayout>